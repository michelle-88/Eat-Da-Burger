<h1>Welcome to Good Burger!</h1>

<div class="container">
    <div class="row">

    {{!-- Column for uneaten burgers --}}
    <div class="col">
        <ul>
            {{#each burgers}}
                {{#unless devoured}}
                    {{> burgers/burger-item devoured=true}}
                {{/unless}}
            {{/each}}
        </ul>
    </div>
    
    {{!-- Column for eaten burgers --}}
    <div class="col">
        <ul>
            {{#each burgers}}
                {{#if devoured}}
                    {{> burgers/burger-item devoured=false}}
                {{/if}}
            {{/each}}
        </ul>
    </div>
    </div>
</div>

<div class="container mt-5">

<h2 class="text-center mb-3">Order a Burger!</h2>

<div class="row justify-content-center">
    
    <div class="col-4">
    {{!-- Form to add new burger --}}
    <form class="create-form">
        <div class="form-group">
            <label for="add-burger">Type of Burger:</label>
            <textarea class="form-control rounded-5 mb-2" id="add-burger" rows="3"></textarea>
            <button type="submit">Order Burger</button>
        </div>
    </form>
    </div>
</div>

</div>